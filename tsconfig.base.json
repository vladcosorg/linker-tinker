{
  "extends": "chetzof-lint-config/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "logError": true,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": false,
    "esm": true
  }
}
